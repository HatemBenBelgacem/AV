@model AV.Models.Auftrag

@{
    ViewData["Title"] = "CreateOrder";
}

<h1>Create</h1>

<h4>Auftrag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Beschreibung" class="control-label"></label>
                <input asp-for="Beschreibung" class="form-control" />
                <span asp-validation-for="Beschreibung" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Position" class="control-label">Produkt wählen</label>
                <select asp-for="Position"  class="form-control" asp-items="ViewBag.ProduktId"></select>
            </div>
         
            <div class="form-group">
                <input type="submit" value="SaveOrder" class="btn btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><button type="button" class="btn btn-outline-secondary">Zurück zur Liste</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
